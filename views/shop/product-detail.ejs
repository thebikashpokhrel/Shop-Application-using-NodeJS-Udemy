    <%- include('../includes/nav.ejs') %>

    <main class="centered">
        <div class="card">
            <img src="<%=product.imageURL%>" alt="Denim Jeans" style="width:100%">
            <h1>
                <%= product.title %>
            </h1>
            <p class="price">$<%= product.price%></p>
