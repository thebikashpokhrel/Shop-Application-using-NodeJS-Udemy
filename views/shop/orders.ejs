    <body>
        <%- include('../includes/nav.ejs') %>
        <main>
            <% if(orders.length <=0) { %>
                <h1>No orders placed</h1>
            <%} else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h2>#<%= order._id %></h2>
                            <ul>
                                <% order.items.forEach(product => { %>
                                    <li><%= product.title %> (<%=product.quantity %>)</li>
                                    <% }) %>
                            </ul>
                        </li>
                        <%})%>
                </ul>
                <% } %>
        </main>
